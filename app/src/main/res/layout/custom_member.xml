<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatarMember"
            android:layout_width="80dp"
            android:padding="4dp"
            android:layout_height="80dp"
            android:src="@drawable/user_nav" />

        <TextView
            android:id="@+id/txtNameMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgAvatarMember"
            android:text="Nguyen Ba Hung"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtGmailMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNameMember"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgAvatarMember"
            android:text="hungpronguyen256@gmail.com"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtPhoneMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtGmailMember"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgAvatarMember"
            android:text="01695932469"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtNameCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtPhoneMember"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imgAvatarMember"
            android:text="Cong ty co phan ABC"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

</android.support.v7.widget.CardView>