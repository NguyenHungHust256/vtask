<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/custom_border"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:text="Công việc A"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_height="wrap_content" />
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/timeProject"
           android:layout_width="wrap_content"
           android:text="Tao cách đây 2 tuần (05/01/2018)"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_width="wrap_content"
           android:text=" [26 việc]"
           android:layout_toRightOf="@id/timeProject"
           android:textColor="@color/colorRed"
           android:layout_height="wrap_content" />
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="20dp"
            android:src="@drawable/user_nav"
            android:layout_height="20dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img2"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/img1"
            android:layout_width="20dp"
            android:src="@drawable/user_nav"
            android:layout_height="20dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img3"
            android:layout_marginLeft="4dp"
            android:layout_width="20dp"
            android:layout_toRightOf="@id/img2"
            android:src="@drawable/user_nav"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/txtNumberMember"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/img3"
            android:text=" (+16)"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#00976a"
            android:layout_toRightOf="@id/txtNumberMember"
            android:text=" [Thêm thành viên] "
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>